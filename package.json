{
  "name": "njs",
  "version": "1.0.0",
  "description": "A Layered Architecture node.js Boilerplate.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "prebuild": "npm run clean",
    "build": "npm run transpile",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "clean": "rimraf ./dist",
    "format": "prettier --config ./.prettierrc src/**/*.js --write",
    "transpile": "babel ./src --out-dir dist",
    "test": "jest --config ./jest.config.json",
    "test:watch": "npm run test -- --watch"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix && npm run format"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AhmedSomaa/njs.git"
  },
  "keywords": [
    "node",
    "express",
    "javascript"
  ],
  "author": "Ahmed Ismail Abo Kahf <ahmedsomaa@aucegypt.edu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AhmedSomaa/njs/issues"
  },
  "homepage": "https://github.com/AhmedSomaa/njs#readme",
  "devDependencies": {
    "@babel/node": "^7.12.6",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.0",
    "supertest": "^6.0.1"
  },
  "dependencies": {
    "@babel/cli": "^7.12.7",
    "@babel/core": "^7.12.7",
    "@babel/preset-env": "^7.12.7",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "mongoose": "^5.10.15",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.6",
    "open": "^7.3.0",
    "rimraf": "^3.0.2",
    "swagger-jsdoc": "^5.0.1",
    "swagger-ui-express": "^4.1.5",
    "winston": "^3.3.3"
  }
}
